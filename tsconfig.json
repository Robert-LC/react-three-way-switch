{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "display": "Recommended",
  "$schema": "https://json.schemastore.org/tsconfig"
}
